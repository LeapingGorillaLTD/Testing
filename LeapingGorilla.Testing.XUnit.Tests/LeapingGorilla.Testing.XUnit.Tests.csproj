          <PrivateAssets>all</PrivateAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\LeapingGorilla.Testing.XUnit\LeapingGorilla.Testing.XUnit.csproj" />
